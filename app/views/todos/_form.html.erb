<%= form_with(model: todo) do |form| %>
  <% if todo.errors.any? %>
    <div style="color: red">
      <h2><%= t('todos.form.error_heading', count: todo.errors.count) %></h2>

      <ul>
        <% todo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :Banana, style: "display: block" %>
    <%= form.text_field :Banana %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
